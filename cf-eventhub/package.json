{
  "name": "cf-eventhub",
  "type": "module",
  "version": "0.0.0",
  "scripts": {
    "build": "tsup --external cloudflare:workers",
    "test": "vitest -c vitest.config.worker.mts",
    "test-node": "vitest -c vitest.config.node.mts",
    "migration:generate": "drizzle-kit generate"
  },
  "devDependencies": {
    "@cloudflare/vitest-pool-workers": "^0.5.28",
    "@cloudflare/workers-types": "^4.20240925.0",
    "@pulumi/cloudflare": "^5.40.0",
    "@types/jsonpath": "^0.2.4",
    "@types/node": "^22.7.4",
    "drizzle-kit": "^0.24.2",
    "testcontainers": "^10.13.1",
    "tsup": "^8.3.5",
    "typescript": "^5.6.2",
    "vitest": "2.1.1",
    "wrangler": "^3.87.0"
  },
  "dependencies": {
    "@pulumi/pulumi": "^3.135.1",
    "async-mutex": "^0.5.0",
    "drizzle-orm": "^0.33.0",
    "jsonpath": "^1.1.1",
    "neverthrow": "^8.0.0",
    "postgres": "^3.4.4",
    "valibot": "^0.42.0"
  },
  "tsup": {
    "entry": [
      "src/core/index.ts",
      "src/dev/index.ts",
      "src/postgres/postgresjs.ts"
    ],
    "splitting": true,
    "sourcemap": true,
    "format": [
      "esm"
    ],
    "dts": true
  },
  "exports": {
    "core": {
      "import": "./dist/core/index.js",
      "types": "./dist/core/index.d.ts"
    },
    "dev": {
      "import": "./dist/dev/index.js",
      "types": "./dist/dev/index.d.ts"
    },
    "postgres": {
      "import": "./dist/postgres/postgresjs.js",
      "types": "./dist/postgres/postgresjs.d.ts"
    }
  },
  "files": [
    "dist",
    "src/migration"
  ]
}
