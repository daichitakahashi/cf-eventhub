{
  "name": "cf-eventhub",
  "type": "module",
  "version": "0.3.0",
  "keywords": [
    "cloudflare"
  ],
  "scripts": {
    "build": "tsup --external cloudflare:workers",
    "test": "vitest -c vitest.config.worker.mts",
    "test-node": "vitest -c vitest.config.node.mts",
    "migration:generate": "drizzle-kit generate"
  },
  "devDependencies": {
    "@cloudflare/vitest-pool-workers": "catalog:",
    "@cloudflare/workers-types": "catalog:",
    "@electric-sql/pglite": "^0.2.17",
    "@types/jsonpath": "^0.2.4",
    "@types/node": "^22.7.4",
    "drizzle-kit": "^0.30.4",
    "testcontainers": "^10.13.1",
    "tsup": "^8.3.5",
    "typescript": "^5.6.2",
    "vitest": "2.1.1",
    "wrangler": "catalog:"
  },
  "dependencies": {
    "async-mutex": "^0.5.0",
    "drizzle-orm": "0.39.0",
    "jsonpath": "^1.1.1",
    "neverthrow": "^8.1.1",
    "postgres": "^3.4.5",
    "valibot": "1.0.0-beta.8"
  },
  "tsup": {
    "entry": [
      "src/**/*.ts",
      "!src/**/*.test.ts",
      "!src/repositorytest/**/*.ts"
    ],
    "splitting": false,
    "sourcemap": true,
    "format": [
      "esm",
      "cjs"
    ],
    "dts": true,
    "clean": true
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./core": {
      "import": "./dist/core/index.js",
      "require": "./dist/core/index.cjs"
    },
    "./dev": {
      "import": "./dist/dev/index.js",
      "require": "./dist/dev/index.cjs"
    },
    "./postgresjs": {
      "import": "./dist/postgres/postgresjs.js",
      "require": "./dist/postgres/index.cjs"
    }
  },
  "files": [
    "dist",
    "src/migration"
  ]
}
